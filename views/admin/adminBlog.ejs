<html>
    <head>
        <title><%= title %></title>
        <!-- Favicon -->
    <link rel="icon" href="img/core-img/favicon.ico">
    

    <!-- Core Stylesheet -->
    <link href="/css/style.css" rel="stylesheet">

    <!-- Responsive CSS -->
    <link href="/css/responsive/responsive.css" rel="stylesheet">
    </head>
    <body>

            <div class="container">
                      
                    <div class="second" >

                        <h3>All Blog Output</h3>
                        <div class="float-right">
                           <a href="/admin/blogPost" class="btn btn-success" style="color:white">Post a Blog</a>
                        </div>

                      <div class="container" >
                        <div class="row">
                            <% for (var i = 0; i < blog.length; i++  ){ %>
                               
                            <div class="col-sm-3 shadow p-3 mb-5 bg-white rounded">
                                <div class="card " >
                                    <img src="<%= blog[i].imgUrl %> " height="120px" class="card-img-top" alt="...">
                                    <div class="card-body" style="padding:10px;">
                                      <b class="card-title"> <%= blog[i].title  %> </b>
                                      <p class="card-text" style="font-size:12px;text-align:justify"><%= blog[i].excerpt %></p>
                                        <button  data-toggle="modal" data-target="#popup<%= i %>" aria-labelledby= "exampleModalLongTitle<%= i  %>"  class="btn btn-success" style="font-size:14px;padding:5px 35px">Edit</button>
                                        <button  data-toggle="modal" data-target="#popup<%= i + blog.length %>" class="btn btn-danger float-right" style="font-size:14px;padding:5px 25px">Delete</button>
                                     
                                    </div>
                                </div>
                            </div>

                            <div class="modal fade" id="popup<%= i %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle<%= i  %> " aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                  <div class="modal-content">
                                    <div class="modal-header">
                                      <h5 class="modal-title" id="exampleModalLongTitle">Blog Post</h5>
                                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                      </button>
                                    </div>
                                    <div class="modal-body">
                                        <form  action="/admin/blogEdit/<%=blog[i].id %>"   method="post">
                                             
                                            <div class="form-group">
                                              <label for="exampleInputEmail1">Title</label>
                                              <input type="text" class="form-control" required value="<%= blog[i].title %>" name='title' aria-describedby="emailHelp" placeholder="Title">
                                              
                                            </div>
                                          
                                            <div class="form-group">

                                                <label for="exampleInputEmail1">Blog Excerpt</label>
                                                <textarea type="text" class="form-control" value="<%= blog[i].excerpt %>" name="excerpt" aria-describedby="emailHelp" required placeholder=""></textarea>
                                              
                                            </div>
                               
                                            <div class="form-group">
                                                <label for="exampleInputEmail1">Date</label>
                                                <input type="date" class="form-control" value="" required  name="date" aria-describedby="emailHelp" placeholder="Enter the content here">
                                                
                                            </div>

                                            

                                            <button type="submit" class="btn btn-primary">Update</button>
                                          </form>
                                    </div>
                                    <div class="modal-footer">
                                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                      
                                    </div>
                                  </div>
                                </div>
                              </div>

                              
                            <div class="modal fade" id="popup<%= i+ blog.length  %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitles" aria-hidden="true">
                              <div class="modal-dialog" role="document">
                                <div class="modal-content" style="padding:5%">
                                  <h4 style="font-weight:bold; text-align:center">Do you want to Delete this post ?</h4><br>
                                 <center> 
                                      <form action="/admin/blogDelete/<%= blog[i].id %>" method="post">
                                            <input type="hidden">
                                            <button class="btn btn-danger"  style="padding:10px 30px;" type="submit">Yes</button>  
                                      </form>
                                </center>
                                </div>
                              </div>
                            </div>


                            <% } %>


<!-- 
                              <form action="/sermon/postd" method="post"> 

                              </form> -->
                           


                        

                        </div>
                      </div>
                        
                </div>
            </div>

             <!-- ***** Header Area Start ***** -->
     <%- include('./partials/footer.ejs') %>
     <!-- ***** Header Area End ***** -->
    </body>
</html>
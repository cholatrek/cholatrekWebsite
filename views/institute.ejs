    <body>
        <div class="desktop" style="width:100%">
            <div class="row" style="width:101%;height:100%;">
                <div class="col-sm-5" style="background-image: url('./assets/images/institute/institute.jpg');background-position:center;background-repeat: no-repeat;background-size: cover;">
                    
                </div>
                <div class="col-sm-7" style=" background-color:#F7F9FB;">
                    <div class="">
                        <div class="row">
                            <div class="col-sm-1"></div>
                            <div class="col-sm-10" style="padding: 10px 50px;">
                                <div class="registration " style="height: 100%;border-radius: 10px;">
                                       <form action="/institute" method="post" >
                                            <div class="" >
                                                    <h5 class="text-center">Registration Form</h5>
                                                    
                                                    <% if (message.length > 0) { %>
                                                        <br>
                                                        <p class="text-center  btn btn-success " style="width: 100%;background-color: #184289"><%= message %></p>
                                                    <% } else{ %>
                                                        <p class="text-center" style="color:black">Fill the form below</p>
                                                    <% } %>
        
                                                    <div class="row">
                                                        <div class="col-sm-6">
                                                                <label> First Name: </label>
                                                                <input type="text" name="fname" required >
                                                        </div>
                                                        <div class="col-sm-6">
                                                                <label> Last Name: </label>
                                                                <input type="text" name="lname" required >
                                                        </div>
                                                        <div class="col-sm-12"  style="margin-top: 10px;" >
                                                                <label> Email Address: </label>
                                                                <input type="email" name="email" required >
                                                        </div>
                                                        <div class="col-sm-12"  style="margin-top: 10px;" >
                                                                <label> Phone Number: </label>
                                                                <input type="phone" name="phone" required >
                                                        </div>
                                                        <div class="col-sm-12" style="margin-top: 20px;">
                                                            <select name="course" required>
                                                                <option value="" style="color: white;" >Select Course Type</option>
                                                                <option  value="web" >Web Development</option>
                                                                <option  value="app" >App Development</option>
                                                                <option  value="ui" >Product Design</option>
                                                                <option  value="graphics" >Graphics design</option>
                                                            </select>
                                                        </div>
                                                        <div class="col-sm-12" style="margin-top: 10px" >
                                                            <label>Do you have any skill already?</label>
                                                            <div class="row" style="margin-top: -15px;">
                                                                <div class="col-sm-2">
                                                                    <div class="float-">
                                                                            <input type="radio" value="yes" required style="background-color: #184289;width:30%" name="skill" >
                                                                            <span style="position: relative;top:-18px" >Yes</span>
                                                                        
                                                                        </div>
                                                                    </div> 
                                                                    <div class="col-sm-2">
                                                                            <div class="float-" style="position:right">
                                                                                    <input type="radio" required value="no" style="background-color: #184289; color:#184289;  width:30%" name="skill" >
                                                                                    <span style="position: relative;top:-18px" >No</span>
                                                                                
                                                                                </div>
                                                                    </div> 
                                                                
                                                                
                                                            </div>
                                                           
                                                          
                                                        </div>
                                                        <div class="col-sm-12"   style="margin-top: -10px;">
                                                                <label> Why do you want to enrol?: </label>
                                                                <textarea  name="enrolment" style="color:grey;padding-left:10px"  ></textarea>
                                                        </div>
                                                        <div class="col-sm-12" style="margin-top: 10px" >
                                                            <div class="float-left">
                                                                <button type="submit">Submit</button>
                                                            </div>
                                                            <div class="float-right">
                                                                <a href="/" style="text-decoration: underline;font-weight:bold" >Go Home</a>
                                                            </div>
                                                    </div>
    
                                                        
                                                       
